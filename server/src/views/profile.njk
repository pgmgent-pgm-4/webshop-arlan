{% extends "base.njk" %}
{% block content %}
 {% set detailData = { image: 'null', name: 'Profile', padding: '16' } %}
 {% include "./partials/detailheader.njk" %}
 <main>
  <section class="bg-site-bg overflow-hidden py-8">
   <div class="container bg-white p-6 md:w-9/12 m-auto rounded-2xl shadow-card mb-4">
    <div class="flex flex-col items-center justify-center">
     <div class="bg-yellow-200 w-40 h-40 rounded-full text-center items-center flex justify-center my-4">
      <h2 class="text-gray-800 font-bold text-7xl ">{{ profileData.firstname | truncate(1, true, '') }}</h2>
     </div>
     <h2 class="text-center text-3xl font-bold">{{ profileData.firstname }}
      {{ profileData.lastname }}</h2>
     <p class="p-2 text-l">Date of birth: {{ profileData.date_of_birth | truncate(10, true, '') }}</p>
    </div>
   </div>
  </section>
  <section class="bg-site-bg overflow-hidden">
   <div class="container mx-auto pb-8 md:w-9/12">
    {% for data in favoritesData -%}
     <a href="/products/{{ data.ProductId | lower }}">
      <div class="flex py-4 flex-wrap items-center justify-between min-w-full bg-white text-gray-800 rounded-2xl mb-3 shadow-card">
       <div class="flex items-center pl-5">
        <div class="flex content-center items-center">
         <div>
          <h3 class="block md:inline text-lg font-bold ml-3">{{ data.ProductId | capitalize }}</h3>
          <h3 class="block md:inline text-sm ml-3 font-bold uppercase">{{ data.symbol }}</h3>
         </div>
        </div>
       </div>
       <img class="pr-5" src="data:image/png;base64,"/>
      </div>
     </a>
    {%- endfor %}
   </div>
  </section>
 </main>
{% endblock %}